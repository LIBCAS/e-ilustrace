<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <changeSet id="app_settings:1" author="zamborsky">
        <createTable tableName="eas_app_settings">
            <!-- BaseObject -->
            <column name="id" type="varchar(255)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="eas_app_settings_PK"/>
            </column>

            <!-- DatedObject -->
            <column name="created" type="timestamp"/>
            <column name="updated" type="timestamp"/>
            <column name="deleted" type="timestamp"/>

            <!-- Own properties -->
            <column name="settings" type="nclob"/>
        </createTable>
    </changeSet>

    <changeSet id="app_settings:2" author="camak">
        <createIndex tableName="eas_app_settings" indexName="eas_app_settings_created_idx">
            <column name="created"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>